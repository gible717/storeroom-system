# Storeroom Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control!

# Database Configuration
DB_HOST=localhost
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_NAME=storeroom_db

# Telegram Bot Configuration
# Get token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
# Comma-separated list of admin chat IDs
TELEGRAM_ADMIN_CHAT_IDS=123456789,987654321
TELEGRAM_ENABLED=true

# Monthly Reminder Settings
MONTHLY_REMINDER_ENABLED=true
MONTHLY_REMINDER_TIME=09:00

# System URL (change for production)
SYSTEM_BASE_URL=http://localhost/storeroom

# Application Settings
APP_DEBUG=false
APP_ENV=production
